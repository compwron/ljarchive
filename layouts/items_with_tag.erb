<h2><%= @item[:title] %></h2>

<table>
  <% items_with_tag(tag).sort{ |i1, i2| i2[:created_at] <=> i1[:created_at] }.each do |post| %>
  <tr>
      <td class=date>
          <time datetime="<%= post[:created_at].strftime('%Y-%m-%d') %>"><%= post[:created_at].strftime('%Y %b %d, %k:%M') %></time>
      </td>
      <td>
          <%= link_to post[:title], post.path %>
          <p class=tags><%= render 'tags_for_item', :item => post %></p>
      </td>
  </tr>
  <% end %>
</table>
